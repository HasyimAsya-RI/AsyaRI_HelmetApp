<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:app               = "http://schemas.android.com/apk/res-auto"
    xmlns:tools             = "http://schemas.android.com/tools"
    android:layout_width    = "match_parent"
    android:layout_height   = "match_parent"
    android:orientation     = "vertical"
    tools:context           = ".ui.menu.EditHelmActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width        = "match_parent"
        android:layout_height       = "50dp"
        android:gravity             = "center_vertical"
        android:background          = "#fed900"
        android:orientation         = "horizontal">
        <ImageView
            android:id                  = "@+id/img_goBack"
            android:layout_width        = "30dp"
            android:layout_height       = "30dp"
            android:layout_marginLeft   = "15dp"
            android:src                 = "@drawable/ic_arrow_back_24" />
        <TextView
            android:layout_width        = "match_parent"
            android:layout_height       = "wrap_content"
            android:layout_marginLeft   = "15dp"
            android:layout_marginRight  = "25dp"
            android:text                = "Edit Data Helm"
            android:textSize            = "20dp"
            android:textStyle           = "bold"
            android:textColor           = "@color/black" />
    </LinearLayout>

    <ScrollView
        android:layout_width        = "match_parent"
        android:layout_height       = "match_parent">
        <LinearLayout
            android:layout_width        = "match_parent"
            android:layout_height       = "match_parent"
            android:orientation         = "vertical">
            <!-- Input: Helm Code -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "50dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:text                = "Kode Helm:"
                android:textSize            = "16dp"
                android:textColor           = "@color/black" />
            <TextView
                android:id                  = "@+id/txt_id"
                android:layout_width        = "match_parent"
                android:layout_height       = "40dp"
                android:layout_marginTop    = "10dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:text                = "Kode Helm"
                android:textColor           = "@color/black" />
            <!-- Input: Helm Name -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:text                = "Nama Helm:"
                android:textSize            = "16dp"
                android:textColor           = "@color/black" />
            <EditText
                android:id                  = "@+id/txtEdit_updateName"
                android:layout_width        = "match_parent"
                android:layout_height       = "40dp"
                android:layout_marginTop    = "10dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:hint                = "Masukkan nama helm."
                android:textSize            = "14dp"
                android:paddingStart        = "15dp"
                android:background          = "@color/white" />
            <!-- Input: Helm Price -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:text                = "Harga Helm:"
                android:textSize            = "16dp"
                android:textColor           = "@color/black" />
            <EditText
                android:id                  = "@+id/txtEdit_updateAddress"
                android:layout_width        = "match_parent"
                android:layout_height       = "40dp"
                android:layout_marginTop    = "10dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:hint                = "Masukkan harga helm."
                android:textSize            = "14dp"
                android:paddingStart        = "15dp"
                android:background          = "@color/white" />
            <!-- Input: Helm Image -->
            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp"
                android:text                = "Gambar Helm:"
                android:textSize            = "16dp"
                android:textColor           = "@color/black" />
            <RelativeLayout
                android:layout_width        = "100dp"
                android:layout_height       = "100dp"
                android:layout_marginTop    = "10dp"
                android:layout_marginLeft   = "25dp">
                <ImageView
                    android:id                  = "@+id/img_updateImage"
                    android:layout_width        = "match_parent"
                    android:layout_height       = "150dp"
                    android:src                 = "@drawable/ic_image_24" />
                <Button
                    android:id                  = "@+id/btn_updateImage"
                    android:layout_width        = "42dp"
                    android:layout_height       = "40dp"
                    android:layout_marginEnd    = "4dp"
                    android:layout_marginBottom = "4dp"
                    android:text                = "+"
                    android:backgroundTint      = "#808080"
                    android:layout_alignParentRight         = "true"
                    android:layout_alignParentBottom        = "true" />
            </RelativeLayout>

            <!-- Button: Save -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "25dp"
                android:layout_marginLeft   = "25dp"
                android:layout_marginRight  = "25dp">
                <Button
                    android:id                  = "@+id/btn_updateHelm"
                    android:layout_width        = "125dp"
                    android:layout_height       = "50dp"
                    android:text                = "Simpan"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black"
                    android:backgroundTint      = "#fed900"
                    app:cornerRadius            = "50dp"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>