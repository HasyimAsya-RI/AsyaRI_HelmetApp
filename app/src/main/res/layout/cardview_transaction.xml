<?xml version = "1.0" encoding = "utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:app               = "http://schemas.android.com/apk/res-auto"
    android:layout_width    = "match_parent"
    android:layout_height   = "wrap_content"
    android:layout_margin   = "6dp">

    <RelativeLayout
        android:layout_width        = "match_parent"
        android:layout_height       = "125dp"
        android:layout_margin       = "5dp"
        android:padding             = "5dp">
        <TextView
            android:id                  = "@+id/txt_helmId"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:text                = "1"
            android:visibility          = "invisible" />
        <!-- Helm Image -->
        <ImageView
            android:id                  = "@+id/img_helmImage"
            android:layout_width        = "80dp"
            android:layout_height       = "80dp"
            android:src                 = "@drawable/helm_right"
            android:layout_alignParentTop       = "true"
            android:layout_alignParentBottom    = "true" />

        <!-- Helm Price and Name -->
        <TextView
            android:id                  = "@+id/txt_currecyName"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:layout_marginTop    = "10dp"
            android:layout_marginLeft   = "15dp"
            android:text                = "Rp"
            android:textSize            = "11dp"
            android:textColor           = "#2b2e37"
            android:layout_toRightOf    = "@id/img_helmImage" />
        <TextView
            android:id                  = "@+id/txt_helmPrice"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:layout_marginTop    = "10dp"
            android:text                = "Harga Helm"
            android:textSize            = "11dp"
            android:textColor           = "#2b2e37"
            android:layout_toRightOf    = "@id/txt_currecyName" />
        <TextView
            android:id                  = "@+id/txt_helmName"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:layout_marginTop    = "5dp"
            android:layout_marginLeft   = "15dp"
            android:text                = "Helm Anti Tilang"
            android:textSize            = "16dp"
            android:textStyle           = "bold"
            android:textColor           = "#2b2e37"
            android:layout_below        = "@id/txt_helmPrice"
            android:layout_toRightOf    = "@id/img_helmImage" />
        <!-- Helm Remove and Add -->
        <ImageView
            android:id                  = "@+id/img_helmRemove"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:layout_marginLeft   = "15dp"
            android:src                 = "@drawable/ic_remove_24"
            android:layout_toRightOf    = "@id/img_helmImage"
            android:layout_alignParentBottom    = "true" />
        <TextView
            android:id                  = "@+id/txt_helmAmount"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:layout_marginLeft   = "5dp"
            android:layout_marginRight  = "5dp"
            android:text                = "Jumlah Helm"
            android:textSize            = "16dp"
            android:textStyle           = "bold"
            android:textColor           = "#2b2e37"
            android:layout_toRightOf    = "@id/img_helmRemove"
            android:layout_alignParentBottom    = "true" />
        <ImageView
            android:id                  = "@+id/img_helmAdd"
            android:layout_width        = "wrap_content"
            android:layout_height       = "wrap_content"
            android:src                 = "@drawable/ic_add_24"
            android:layout_toRightOf    = "@id/txt_helmAmount"
            android:layout_alignParentBottom    = "true" />

        <!-- Button: Delete -->
        <Button
            android:id                  = "@+id/btn_helmDelete"
            android:layout_width        = "24dp"
            android:layout_height       = "24dp"
            android:layout_marginBottom = "6dp"
            android:background          = "@drawable/ic_delete_24"
            android:layout_alignParentRight     = "true"
            android:layout_alignParentBottom    = "true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>