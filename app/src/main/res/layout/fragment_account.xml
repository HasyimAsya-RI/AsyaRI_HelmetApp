<?xml version = "1.0" encoding = "utf-8"?>
<FrameLayout
    xmlns:android           = "http://schemas.android.com/apk/res/android"
    xmlns:tools             = "http://schemas.android.com/tools"
    android:layout_width    = "match_parent"
    android:layout_height   = "match_parent"
    android:background      = "#e1e0e5"
    tools:context           = ".ui.account.AccountFragment">

    <ScrollView
        android:layout_width        = "match_parent"
        android:layout_height       = "match_parent">
        <LinearLayout
            android:layout_width        = "match_parent"
            android:layout_height       = "match_parent"
            android:orientation         = "vertical">
            <!-- Header -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:background          = "#fed900"
                android:orientation         = "vertical">
                <!-- Account Image -->
                <ImageView
                    android:id                  = "@+id/img_accountProfile"
                    android:layout_width        = "75dp"
                    android:layout_height       = "75dp"
                    android:layout_marginTop    = "50dp"
                    android:layout_marginLeft   = "25dp"
                    android:src                 = "@drawable/profile" />
                <!-- Account Name -->
                <TextView
                    android:id                  = "@+id/txt_accountName"
                    android:layout_width        = "match_parent"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "50dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginRight  = "25dp"
                    android:text                = "Muhammad Hasyim Asy'ari"
                    android:textSize            = "18dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black"
                    android:layout_toRightOf    = "@id/img_accountProfile" />
                <!-- Account Address -->
                <TextView
                    android:id                  = "@+id/txt_accountAddress"
                    android:layout_width        = "match_parent"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "5dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginRight  = "25dp"
                    android:text                 = "Kabupaten Situbondo"
                    android:textColor           = "@color/black"
                    android:layout_below        = "@id/txt_accountName"
                    android:layout_toRightOf    = "@id/img_accountProfile" />

                <ImageView
                    android:id                  = "@+id/img_line"
                    android:layout_width        = "match_parent"
                    android:layout_height       = "2dp"
                    android:layout_marginTop    = "25dp"
                    android:layout_marginLeft   = "25dp"
                    android:layout_marginRight  = "25dp"
                    android:src                 = "@color/white"
                    android:layout_below        = "@id/img_accountProfile" />

                <!-- Account Email -->
                <TextView
                    android:id                  = "@+id/txt_email"
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "10dp"
                    android:layout_marginLeft   = "25dp"
                    android:layout_marginBottom = "50dp"
                    android:text                = "Email: "
                    android:textColor           = "@color/black"
                    android:layout_below        = "@id/img_line" />
                <TextView
                    android:id                  = "@+id/txt_accountEmail"
                    android:layout_width        = "match_parent"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "10dp"
                    android:layout_marginRight  = "25dp"
                    android:layout_marginBottom = "50dp"
                    android:text                = "hasyim@students.amikom.ac.id"
                    android:textColor           = "@color/black"
                    android:layout_below        = "@id/img_line"
                    android:layout_toRightOf    = "@id/txt_email" />
            </RelativeLayout>

            <!-- Change Profile -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp">
                <TextView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginBottom = "15dp"
                    android:text                = "Ubah Profil"
                    android:textSize            = "16dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black" />
                <ImageView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginRight  = "15dp"
                    android:src                 = "@drawable/ic_navigate_next_24"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>
            <!-- Help Center -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content">
                <TextView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginBottom = "15dp"
                    android:text                = "Pusat Bantuan"
                    android:textSize            = "16dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black" />
                <ImageView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginRight  = "15dp"
                    android:src                 = "@drawable/ic_navigate_next_24"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>
            <!-- Privacy Policy -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content">
                <TextView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginBottom = "15dp"
                    android:text                = "Kebijakan Privasi"
                    android:textSize            = "16dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black" />
                <ImageView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginRight  = "15dp"
                    android:src                 = "@drawable/ic_navigate_next_24"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>
            <!-- Report Problem -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content">
                <TextView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginBottom = "15dp"
                    android:text                = "Laporkan Masalah"
                    android:textSize            = "16dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black" />
                <ImageView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginRight  = "15dp"
                    android:src                 = "@drawable/ic_navigate_next_24"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>
            <!-- Exit -->
            <RelativeLayout
                android:id                  = "@+id/rLyt_exit"
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content">
                <TextView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginBottom = "15dp"
                    android:text                = "Keluar"
                    android:textSize            = "16dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black" />
                <ImageView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginRight  = "15dp"
                    android:src                 = "@drawable/ic_navigate_next_24"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>
            <!-- Delete Account -->
            <RelativeLayout
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content">
                <TextView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginLeft   = "15dp"
                    android:layout_marginBottom = "15dp"
                    android:text                = "Hapus Akun"
                    android:textSize            = "16dp"
                    android:textStyle           = "bold"
                    android:textColor           = "@color/black" />
                <ImageView
                    android:layout_width        = "wrap_content"
                    android:layout_height       = "wrap_content"
                    android:layout_marginTop    = "15dp"
                    android:layout_marginRight  = "15dp"
                    android:src                 = "@drawable/ic_navigate_next_24"
                    android:layout_alignParentRight         = "true" />
            </RelativeLayout>

            <TextView
                android:layout_width        = "match_parent"
                android:layout_height       = "wrap_content"
                android:layout_marginTop    = "15dp"
                android:layout_marginBottom = "50dp"
                android:text                = "Versi 4.0.4"
                android:textStyle           = "bold"
                android:textAlignment       = "center" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>